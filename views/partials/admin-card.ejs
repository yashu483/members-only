<div class="role-applying-card">
  <div class="role-details">
    <div class="passkey-wrapper">
      <img src="./icons/passkey-50.svg" alt="passkey sign" />
    </div>
    <h2>Become an Admin</h2>
    <p class="question">Answer this question to unlock admin privileges.</p>
    <% if(!locals.currentUser.is_member){ %>
      <p class="question" style="color: red;"><em>Note: You need to become a member to be able to apply for admin role. Following form will be disabled until you are a member</em></p>
    <% } %>
    <p class="quest-paragraph">What animal says 'meow' ?</p>
  </div>
  <form action="/roles/admin" method="POST" class="role-form">
    <div>
      <% if(adminAuthErr){ %>
        <p class="auth-error-msg"><%= adminAuthErr %></p>
      <% } %>
      <label for="key">Your Answer</label
      ><input
        type="text"
        name="key"
        id="key"
        required
        placeholder="dog?"
        maxlength="20"
        <%= !locals.currentUser.is_member ? 'disabled': '' %>
      />
    </div>
    <button type="submit" class="btn-grad2"
            <%= !locals.currentUser.is_member ? 'disabled': '' %>
        >Submit Answer</button>
  </form>
</div>
